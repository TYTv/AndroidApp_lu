<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.student.savefile.MainActivity">

    <Button
        android:id="@+id/buttonW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:onClick="onClickAll"
        android:text="Write"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:onClick="onClickAll"
        android:text="Read"
        app:layout_constraintLeft_toRightOf="@+id/buttonW"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonBufW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:onClick="onClickAll"
        android:text="Buffered W"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonW" />

    <Button
        android:id="@+id/buttonBufR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:onClick="onClickAll"
        android:text="Buffered R"
        app:layout_constraintLeft_toRightOf="@+id/buttonBufW"
        app:layout_constraintTop_toBottomOf="@+id/buttonR" />

    <Button
        android:id="@+id/buttonArrW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:onClick="onClickAll"
        android:text="Arr W"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonBufW" />

    <Button
        android:id="@+id/buttonArrR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:onClick="onClickAll"
        android:text="Arr R"
        app:layout_constraintLeft_toRightOf="@+id/buttonArrW"
        app:layout_constraintTop_toBottomOf="@+id/buttonBufR" />

    <Button
        android:id="@+id/buttonExtW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:onClick="onClickAll"
        android:text="Ext W"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonArrW" />

    <Button
        android:id="@+id/buttonExtR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:onClick="onClickAll"
        android:text="Ext R"
        app:layout_constraintLeft_toRightOf="@+id/buttonExtW"
        app:layout_constraintTop_toBottomOf="@+id/buttonArrR" />

    <Button
        android:id="@+id/buttonExtAdvW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:onClick="onClickAll"
        android:text="Ext Adv W"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonExtW" />

    <Button
        android:id="@+id/buttonExtAdvR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:onClick="onClickAll"
        android:text="Ext Adv R"
        app:layout_constraintLeft_toRightOf="@+id/buttonExtAdvW"
        app:layout_constraintTop_toBottomOf="@+id/buttonExtR" />
</android.support.constraint.ConstraintLayout>
